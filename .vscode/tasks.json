{
    
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-m32", 
                "-g",
                "-I${workspaceFolder}/include",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: /usr/bin/gcc"
        },
        {
            "type": "shell",
            "label": "make: build onix app",
            "command": "make",
            "args": [
                "../build/builtin/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "nasm",
            "command": "",
            "args": [
                "/usr/bin/nasm",
                "-f",
                "elf32",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                ";",
                "/usr/bin/gcc",
                "-fdiagnostics-color=always",
                "-m32", 
                "-g",
                "-static",
                "-I${workspaceFolder}/include",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}